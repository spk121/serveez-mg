LIBS = ws2_32.lib shell32.lib mswsock.lib advapi32.lib user32.lib -lz -lbz2

# Linker flags.
LDFLAGS = 

# Include paths.
INCLUDES = -I.. -I../..

# Preprocessor flags.
DEFS = -D__SERVEEZ_EXPORT__ -D__BUILD_SVZ_LIBRARY__

# Extra debug preprocessor flags.
dbg_DEFS = -DENABLE_DEBUG
